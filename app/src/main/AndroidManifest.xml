            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.uade.matt.statistic.DistributionListActivity"/>
        </activity>

        <activity
            android:name=".ui.TDistributionActivity"
            android:label="@string/title_distribution_detail"
            android:parentActivityName=".DistributionListActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.uade.matt.statistic.DistributionListActivity"/>
        </activity>

         <activity
            android:name=".ui.ChiSquaredDistributionActivity"
            android:label="@string/title_distribution_detail"
